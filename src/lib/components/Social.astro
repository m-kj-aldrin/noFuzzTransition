---
import Icon from "./Icon.astro";
---

<div class="text">
    <div class="social">
        <a href="mailto:marcus@m-aldrin.space" title="say hello :)">
            <Icon name="mail" />
        </a>
        <a
            href="https://github.com/m-kj-aldrin"
            target="_blank"
            title="my github place"
        >
            <Icon name="github" />
        </a>
    </div>
</div>

<style>
    .social {
        display: flex;
        gap: 8px;
        line-height: 0;
    }

    .social a {
        width: 20px;
    }

    .text p {
        line-height: 1;
    }

    .text {
        gap: 8px;
        align-self: center;

        white-space: nowrap;

        background-color: hsla(var(--color-light), 0.4);
    }

    .text span {
        word-spacing: initial;
        transform: translateY(1.2px);
        display: inline-block;
        text-transform: uppercase;
        text-shadow:
            0 2px 0 hsl(var(--color-offset)),
            0 4px 0 hsl(var(--color-secondary)),
            0 6px 0 hsl(var(--color-ternary));
    }
</style>
