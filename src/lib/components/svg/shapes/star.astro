---
import { range } from "@lib/util/iter";

interface Props {
  n?: number;
  width?: number;
  offset?: number;
  phase?: number;
}

const { n = 3, width = 0, phase = 0 } = Astro.props;
---

{
  range(n).map((x, i) => {
    const rotStep = 360 / n;
    return (
      <>
        <g transform={`rotate(${rotStep * i + phase}) translate(${width})`}>
          <slot />
        </g>
      </>
    );
  })
}
