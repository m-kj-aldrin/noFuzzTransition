---
const { size, rotate } = Astro.props;
const number = size || 2;
const rot = rotate == "on" ? 90 : 0;
---

<svg width="128" height="128">
    <pattern
        id="dots"
        x="0"
        y="0"
        width="16"
        height="16"
        patternUnits="userSpaceOnUse"
    >
        <g>
            <circle r="1" cx="4" cy="4"></circle>
            <g transform={`translate(8 8) rotate(${rot})`}>
                <line
                    x1={-number}
                    y1={number}
                    x2={number}
                    y2={-number}
                    stroke="black"
                    stroke-width="1"></line>
            </g>
            <circle r="1" cx="12" cy="12"></circle>
        </g>
    </pattern>
    <g transform="translate(0 0)">
        <rect width={128} height={128} fill="url(#dots)"></rect>
    </g>
</svg>
